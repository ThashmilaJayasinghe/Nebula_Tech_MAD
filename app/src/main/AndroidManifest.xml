<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory">
        <activity
            android:name=".Admin_TVShowReview"
            android:exported="true" />
        <activity
            android:name=".Admin_MovieReview"
            android:exported="true" />
        <activity
            android:name=".Admin_BookReview"
            android:exported="true" />
        <activity
            android:name=".TVShow_View_K"
            android:exported="true" />
        <activity
            android:name=".Movie_View_K"
            android:exported="true" />
        <activity
            android:name=".Book_View_K"
            android:exported="true" />
        <activity
            android:name=".Home"
            android:exported="true" />
        <activity
            android:name=".Profile"
            android:exported="true" />
        <activity
            android:name=".AddTVShow"
            android:exported="true"
            android:label="Add TV Show" />
        <activity
            android:name=".AddMovie"
            android:exported="true"
            android:label="Add Movie" />
        <activity
            android:name=".MyReviewsTVShows"
            android:exported="true"
            android:label="My Reviews - TV Shows"
            android:parentActivityName=".MyReviews">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyReviews" />
        </activity>
        <activity
            android:name=".MyReviewsMovies"
            android:exported="true"
            android:label="My Reviews - Movies"
            android:parentActivityName=".MyReviews">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyReviews" />
        </activity>
        <activity
            android:name=".AddBook"
            android:exported="true"
            android:label="Add Book" />
        <activity
            android:name=".MostPopular"
            android:exported="true"
            android:label="Most Popular" />
        <activity
            android:name=".MyReviewsBooks"
            android:exported="true"
            android:label="My Reviews - Books"
            android:parentActivityName=".MyReviews">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyReviews" />
        </activity>
        <activity
            android:name=".MyReviews"
            android:exported="true"
            android:label="My Reviews" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>